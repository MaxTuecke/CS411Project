{%extends "base.jinja2"%}

{%block title%}
  UPDATE DIRECTOR
{%endblock%}

{%block body%}

  {%include "header.jinja2"%}

  <div class="container">
    <div class="page-header">
      <h1>UPDATE DIRECTOR</h1>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form role="form" action="{{url_for('update')}}" method="POST">
        
        <div class="form-group">
            <label for="name">Director Id</label>
            <input
              type="text"
              class="form-control"
              id="insert_id"
              name="insert_id"
              placeholder="dir id"
              required="required"
              tabindex="1"
            >
          </div>
          
        <div class="form-group">
            <label for="name">Director Name (TO UPDATE)</label>
            <input
              type="text"
              class="form-control"
              id="insert_name"
              name="insert_name"
              placeholder="dir name"
              required="required"
              tabindex="1"
            >
          </div>
          
        <div class="form-group">
            <label for="name">Director Birthdate (TO UPDATE)</label>
            <input
              type="text"
              class="form-control"
              id="insert_birth"
              name="insert_birth"
              placeholder="dir birth"
              required="required"
              tabindex="1"
            >
          </div>
          
          <div class="form-group">
            <button type="submit" class="btn btn-primary" name="update_dir" value="update_dir">Update</button>
          </div>
          
        </form>
      </div>
    </div>
  </div>
{%endblock%}

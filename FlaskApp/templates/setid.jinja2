{%extends "base.jinja2"%}

{%block title%}
  SET USER ID
{%endblock%}

{%block body%}

  {%include "header.jinja2"%}

  <div class="container">
    <div class="page-header">
      <h1>SET USER ID</h1>
        <h4>Current User ID: {{user_id}}</h4>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form role="form" action="{{url_for('setid')}}" method="POST">
            <div class="form-group">
                <label for="name">User Id</label>
                <input
                  type="text"
                  class="form-control"
                  id="user_id"
                  name="user_id"
                  placeholder="mtueck2"
                  required="required"
                  tabindex="1"
                >
                <button type="submit" name='button_setid' value='button_setid' class="btn btn-primary">Set ID</button>
            </div>
        </form>
      </div>
    </div>
  </div>
{%endblock%}

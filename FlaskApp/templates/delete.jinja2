{%extends "base.jinja2"%}

{%block title%}
  DELETE DIRECTOR
{%endblock%}

{%block body%}

  {%include "header.jinja2"%}

  <div class="container">
    <div class="page-header">
      <h1>DELETE DIRECTOR</h1>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form role="form" action="{{url_for('delete')}}" method="POST">
        
        <div class="form-group">
            <label for="name">Director Id</label>
            <input
              type="text"
              class="form-control"
              id="search_id"
              name="search_id"
              placeholder="dir id"
              required="required"
              tabindex="1"
            >
          </div>
          
		  <div class="form-group">
            <button type="submit" class="btn btn-primary" name="delete_dir" value="delete_dir">Delete</button>
          </div>
        </form>
      </div>
    </div>
  </div>
{%endblock%}

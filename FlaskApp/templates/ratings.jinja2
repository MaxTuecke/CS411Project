{%extends "base.jinja2"%}

{%block title%}
  UPDATE RATINGS
{%endblock%}

{%block body%}

  {%include "header.jinja2"%}

  <div class="container">
    <div class="page-header">
      <h1>UPDATE RATINGS</h1>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form role="form" action="{{url_for('ratings')}}" method="POST">
        
        <div class="form-group">
            <label for="name">Movie ID</label>
            <input
              type="text"
              class="form-control"
              id="m_id"
              name="m_id"
              placeholder="movie id"
              required="required"
              tabindex="1"
            >
          </div>
          
            <div class="form-group">
            <label for="name">Rating</label>
            <input
              type="text"
              class="form-control"
              id="n_rating"
              name="n_rating"
              placeholder="0-10"
              required="required"
              tabindex="2"
            >
          </div>
          
          <div class="form-group">
            <button type="submit" class="btn btn-primary" name="add_rating" value="add_rating">Add Rating</button>
          </div>
          
        </form>
      </div>
    </div>
  </div>
{%endblock%}
